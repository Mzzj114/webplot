 def window_close(self):
        main_window.destroy()

    def window_minimize(self):
        main_window.minimize()

    maximized = False

    def window_maximize(self):
        if self.maximized:
            self.maximized = False
            main_window.restore()
        else:
            self.maximized = True
            main_window.maximize()


<!--窗口操作-->
            <!--关闭-->
            <li class="layui-nav-item" style="float: right;" lay-unselect>
                <a href="javascript:pywebview.api.window_close();">
                    <i class="layui-icon layui-icon-close" style="font-size: 20px;"></i>
                </a>
            </li>
            <!--最大化-->
            <li class="layui-nav-item" style="float: right;" lay-unselect>
                <a href="javascript:pywebview.api.window_maximize();">
                    <i class="layui-icon layui-icon-screen-full" style="font-size: 20px;"></i>
                </a>
            </li>
            <!--最小化-->
            <li class="layui-nav-item" style="float: right;" lay-unselect>
                <a href="javascript:pywebview.api.window_minimize();">
                    <i class="layui-icon layui-icon-subtraction" style="font-size: 20px;"></i>
                </a>
            </li>